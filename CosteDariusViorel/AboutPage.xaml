             x:Class="CosteDariusViorel.AboutPage"
             Title="About">
    <VerticalStackLayout Spacing="10" Margin="10">
        <HorizontalStackLayout Spacing="10">
            <Image Source="shop_list.jpg"
            SemanticProperties.Description="Shopping List"
            HeightRequest="64" />
